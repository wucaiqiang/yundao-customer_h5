<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util-4.2.xsd">

	<!-- <context:component-scan base-package="com.zcmall.crmms.controller" 
		/> -->
	<!--DefaultAnnotationHandlerMapping AnnotationMethodHandlerAdapter -->
	<mvc:annotation-driven conversion-service="conversionService"
		validator="validator">
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<property name="supportedMediaTypes">
					<list>
						<value>text/*;charset=UTF-8</value>
						<value>application/*;charset=UTF-8</value>
					</list>
				</property>
			</bean>
			<bean
				class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
				<property name="objectMapper">
					<bean class="com.fasterxml.jackson.databind.ObjectMapper">
						<property name="dateFormat">
							<bean class="java.text.SimpleDateFormat">
								<constructor-arg type="java.lang.String" value="yyyy-MM-dd HH:mm:ss" />
							</bean>
						</property>
					</bean>
				</property>
				<property name="supportedMediaTypes">
					<list>
						<value>text/html;charset=UTF-8</value>
					</list>
				</property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!-- 校验器 -->
	<bean id="validator" class="com.yundao.core.validator.spring.SpringValidator">
		<property name="providerClass" value="org.hibernate.validator.HibernateValidator" />
		<property name="validationMessageSource" ref="messageSource" />
	</bean>

	<bean id="messageSource"
		class="com.yundao.core.code.config.spring.SpringCodeMessageSource" />

	<bean id="conversionService"
		class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<property name="converters">
			<list>
				<bean class="com.yundao.core.converter.date.SpringDateConverter">
					<property name="pattern" value="yyyy-MM-dd HH:mm:ss,yyyy-MM-dd"></property>
				</bean>
				<bean class="com.yundao.core.converter.integer.SpringIntegerConverter" />
				<bean class="com.yundao.core.converter.doubles.SpringDoubleConverter" />
			</list>
		</property>
	</bean>


	<bean id="sca" class="com.yundao.core.aware.spring.SpringServletContextAware"
		init-method="init" />

	<!-- <bean id="exceptionResolver" class="com.yundao.core.resolver.spring.SpringExceptionResolver" 
		/> -->

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/swagger-ui.html" />
			<mvc:exclude-mapping path="/swagger-resources" />
			<mvc:exclude-mapping path="/v2/api-docs" />
			<mvc:exclude-mapping path="/configuration/security" />
			<mvc:exclude-mapping path="/configuration/ui" />
			<mvc:exclude-mapping path="/**/fonts/*" />
			<mvc:exclude-mapping path="/**/*.css" />
			<mvc:exclude-mapping path="/**/*.js" />
			<mvc:exclude-mapping path="/**/*.png" />
			<mvc:exclude-mapping path="/**/*.gif" />
			<mvc:exclude-mapping path="/**/*.jpg" />
			<mvc:exclude-mapping path="/**/*.jpeg" />
			<mvc:exclude-mapping path="/**/*.ico" />
			<mvc:exclude-mapping path="/**/*.map" />
			<mvc:exclude-mapping path="/**/*.xlsx" />
			<mvc:exclude-mapping path="/**/*.doc" />
			<mvc:exclude-mapping path="/**/*.ppt" />
			<mvc:exclude-mapping path="/**/*.txt" />
			<mvc:exclude-mapping path="/**/*.map" />
			<mvc:exclude-mapping path="/user/get_key_public" />
			<bean class="com.yundao.customer.h5.interceptor.HeaderUserInterceptor">
				<property name="excludeUrl"
					value="/roadshow/get,/msg/message/send_message,/afp/get_card,/afp/get_qrcode,/user/send_register_captcha,/user/send_retrieve_password,/captcha/img/check_for_retrieve_pwd,/captcha/img/check_for_register,/captcha/img/get_for_retrieve_pwd,/captcha/img/get_for_register,/user/register,/user/validate_mobile,/user/send_retrieve_captcha,/user/retrieve_password,/user/login,/product/get_recommend_list,/question/gets_risk_question
				/get/tenant/info,/cache/remove_domains,/asset/plan/get_description,/asset/plan/get,/asset/product/get_page,/asset/get/customer/risk_evaluation_result,/asset/get/customer_plan,/asset/get/customer/risk_evaluation_result"></property>
			</bean>
		</mvc:interceptor>
	</mvc:interceptors>

</beans>
